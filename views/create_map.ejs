<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>Add a Map - Altmaps</title>

  <% include partials/_styles-and-scripts %>

</head>

  <body>
    <% var active = {home: "", maps: "active", profile: ""};
        var hidden = "hidden"; %>
    <% include partials/_header %>

    <!-- Page Contents -->
    <div class="pusher">

      <div class="ui inverted vertical masthead center aligned segment small">

        <div class="ui container">
          <div class="ui large secondary inverted pointing menu">
            <a class="toc item">
              <i class="sidebar icon"></i>
            </a>
              <% include partials/_nav %>
            <div class="right item">
              <form action="/login" method="POST" class="ui form nav-bar hidden">
                <input type="text" name="email" placeholder="you@...">
                <input type="password" name="password" placeholder="Enter Password">
              </form>
              <a id="login-button" class="ui inverted button">Log in</a>
              <a class="ui inverted button" href="/register">Sign Up</a>
            </div>
          </div>
        </div>
      </div>

      <div class="ui container segment">
        <form action="/login" method="POST"class="ui form">
          <div class="field">
            <label>Map Title</label>
            <input type="text" name="title" placeholder="Greatest Spots for...">
          </div>
          <div class="field">
            <label>Description</label>
            <input type="text" name="description" placeholder="Any other details?">
          </div>
          <button class="ui button" type="submit">Submit</button>
        </form>
      </div>

      <% include partials/_footer %>

    </div>

  </body>
</html>
